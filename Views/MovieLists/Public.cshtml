@model IEnumerable<MvcMovies.Models.MovieList>

@{
    ViewData["Title"] = "Public Movie Lists";
}

<h1>Public Movie Lists</h1>
<hr />

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info">No public movie lists found. Be the first to create one!</div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-light">
                <tr>
                    <th>Title</th>
                    <th>Created By</th>
                    <th>Created</th>
                    <th>Movies</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Title</td>
                        <td>@(item.User?.UserName ?? "Unknown User")</td>
                        <td>@item.CreatedAt.ToLocalTime().ToString("g")</td>
                        <td>@(item.MovieListItems?.Count ?? 0)</td>
                        <td class="text-end">
                            <a asp-action="Details" asp-route-id="@item.Id" asp-route-referrer="public" class="btn btn-sm btn-outline-primary">
                                <i class="bi bi-eye"></i> View
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
