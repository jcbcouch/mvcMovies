@model MvcMovies.Models.ViewModels.TopRatedMoviesViewModel

@{
    ViewData["Title"] = "Top Rated Movies";
}

<div class="container mt-4">
    <h1>Top 100 Rated Movies</h1>
    
    @if (Model.TopRatedMovies.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Rank</th>
                        <th>Poster</th>
                        <th>Title</th>
                        <th>Year</th>
                        <th>Average Rating</th>
                        <th># of Ratings</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.TopRatedMovies.Count; i++)
                    {
                        var movie = Model.TopRatedMovies[i];
                        <tr>
                            <td>@(i + 1)</td>
                            <td>
                                @if (!string.IsNullOrEmpty(movie.Movie.Poster) && movie.Movie.Poster != "N/A")
                                {
                                    <img src="@movie.Movie.Poster" alt="@movie.Movie.Title" style="height: 75px;" />
                                }
                                else
                                {
                                    <div style="width: 50px; height: 75px; background-color: #f0f0f0; display: flex; align-items: center; justify-content: center;">
                                        <i class="bi bi-film" style="font-size: 1.5rem; color: #999;"></i>
                                    </div>
                                }
                            </td>
                            <td>
                                <a asp-action="Details" asp-route-id="@movie.Movie.ImdbID">
                                    @movie.Movie.Title
                                </a>
                            </td>
                            <td>@movie.Movie.Year</td>
                            <td>
                                <div class="d-flex align-items-center">
                                    @for (int j = 1; j <= 5; j++)
                                    {
                                        if (j <= Math.Floor(movie.AverageRating / 2))
                                        {
                                            <i class="bi bi-star-fill text-warning"></i>
                                        }
                                        else if (j - 0.5 <= movie.AverageRating / 2)
                                        {
                                            <i class="bi bi-star-half text-warning"></i>
                                        }
                                        else
                                        {
                                            <i class="bi bi-star text-warning"></i>
                                        }
                                    }
                                    <span class="ms-2">@movie.AverageRating/10</span>
                                </div>
                            </td>
                            <td>@movie.RatingCount</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            No movies have been rated yet. Be the first to rate a movie!
        </div>
    }
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
}